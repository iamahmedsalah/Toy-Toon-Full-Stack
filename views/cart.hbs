{{#if cart}}
<div class="row">
	
	    				<table class="table">
						    <thead class="thead-primary">
						    <tr class="text-center">
						        <th>&nbsp;</th>
						        <th>&nbsp;</th>
						        <th>Product name</th>
						        <th>Price</th>
                                <th>Quantity</th>
                                <td  style="font-size:x-large;" class="total">SubTotal: ${{cart.totalPrice }}</td>
                                </tr>
						    </thead>
						    <tbody>
								{{#each cart.selectProduct }}
						<tr class="text-center">
							<td class="product-remove"><a href="#"><i class="bi bi-x"></i></a></td>
						        
						        <td class="image-prod"><div class="img" style="background-image:url({{this.productImg}});"></div></td>
						        
						        <td class="product-name">
						        	<h3>{{this.productName}}</h3>
						        	<p><img  style="width:70px" src="{{this.brandImg}}" alt=""></p>
                                    <p>{{this.ages}}</p>
						        </td>
						        
						        <td class="price">${{this.price}}</td>
						        <td class="quantity">
						        	<div class="">
					            <p type="text" name="quantity" class="quantity input-number">{{this.quantity}} </p>
                                </div>
							{{/each}}
                            
						    </tbody>
						</table>
				
	</div>
{{/if}}

